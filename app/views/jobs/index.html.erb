<section class='px-5 py-3'>
    <p class='text-2xl'>Active Jobs</p>
    <% @jobs.each do |job| %>
        <div class='px-5 py-3 my-4 shadow-lg rounded-md border-2 border-gray-200'>
        <p class='text-xl'><%= job.title %></p>
        <p><%= job.body %></p>
        <p class='text-gray-500'><%= job.address %></p>
        </div>
    <% end %>
</section>
<section class='px-5 py-3'>
    <p class='text-2xl pb-2'>Create New Job</p>
    <%= form_for @job, :html => {:class =>'px-5 py-3 my-4 shadow-lg rounded-md border-2 border-gray-200 max-w-xl' } do |f|%>
        <div class='flex flex-col mb-3'>
            <%= f.label(:title, "Job Name") %>
            <%= f.text_field :title, class: 'border py-1 px-3' %>
        </div>
        <div class='flex flex-col mb-3'>
            <%= f.label :address %>
            <%= f.text_field :address, class: 'border py-1 px-3' %>
        </div>
        <div class='flex flex-col mb-3'>
            <%= f.label(:body, "Description") %>
            <%= f.text_area :body, class: 'border py-1 px-3' %>
        </div>
        <%= f.submit "Save Job", :class => 'px-3 py-3 bg-blue-500 text-white rounded-md' %>
    <% end %>
</section>